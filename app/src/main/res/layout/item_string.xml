<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">


    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/img_string"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="6dp"
        android:src="@null" />

    <ImageView
        android:layout_toRightOf="@+id/img_string"
        android:id="@+id/img_string1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="6dp"
        android:src="@null" />
    <ImageView
        android:layout_toRightOf="@+id/img_string1"
        android:id="@+id/img_string2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="6dp"
        android:src="@null" />


    <TextView
        android:layout_below="@+id/img_string"
        android:id="@+id/string_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/img_string"
        android:layout_below="@+id/string_id"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</RelativeLayout>